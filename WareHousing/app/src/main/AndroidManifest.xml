<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zigcloud.warehousing">
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icx_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zigcloud.warehousing.activity.vitamio.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.zigcloud.warehousing.activity.LoginActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.MainActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.ModelListActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.EnvironmentMonitorActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.FunctionListActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.EquipmentActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.GoodsImportActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.GoodsOutportActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.GoodsSearchActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.vitamio.VitamioActivity"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name="com.zigcloud.warehousing.activity.channel.tvlive"
            android:label="@string/app_name"  >
        </activity>

    </application>

</manifest>
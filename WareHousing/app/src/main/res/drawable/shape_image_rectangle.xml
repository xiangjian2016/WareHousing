<?xml version="1.0" encoding="utf-8"?>  
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item> 
		<shape android:shape="rectangle">     
		    <stroke 
		        android:width="1px"
		        android:color="@color/gray" />  
		    <solid android:color="@null"/> 
		    <padding 
		        android:left="3dip"
		        android:top="3dip"
		        android:right="3dip"
		        android:bottom="3dip"/> 
		</shape>
    </item>
</layer-list>
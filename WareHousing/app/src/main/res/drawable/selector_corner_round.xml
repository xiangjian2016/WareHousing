<?xml version="1.0" encoding="UTF-8"?>
<!-- 圆角 长方体 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--默认背景 -->
    <item android:state_pressed="false">
        <shape > 
		   <stroke
		       android:width="1px"
		       android:color="@color/corner_round_border" /> 
		   <solid android:color="@color/corner_round_background_normal" />
		   <corners android:radius="6dip" />
		</shape>  
    </item> 
    <!--单击时 -->
    <item  android:state_pressed="true">
        <shape >  
		   <stroke
		       android:width="1px"
		       android:color="@color/corner_round_border" /> 
		   <solid android:color="@color/corner_round_background_pressed" />
		   <corners android:radius="6dip" />
		</shape>  
    </item>
</selector>